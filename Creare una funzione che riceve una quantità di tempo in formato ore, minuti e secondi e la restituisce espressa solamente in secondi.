/*
*Creare una funzione che riceve una quantit√† di tempo in formato ore, minuti e secondi e la restituisce espressa solamente in secondi.
*/
#include <iostream>

using namespace std;

void contosecondi(int a, int b, int c)
{
	int seconditotali = 0;
	a = a * 3600;
	b = b * 60;
	seconditotali = a + b + c;
	cout << seconditotali << endl;
}

int main()
{
	int ore;
	int minuti;
	int secondi;
	cout << "Inserisci le ore:";
	cin >> ore;
	cout << "Inserisci i minuti:";
	cin >> minuti;
	cout << "Inserisci i secondi:";
	cin >> secondi;
	contosecondi(ore, minuti, secondi);
	system("PAUSE");
}
